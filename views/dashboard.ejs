<%- include("./layouts/header", { title: "Dashboard" , bodyClass: "page-dashboard" }) %>

  <header class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-2">
      <div>
        <small>Welcome</small><br>
        <strong>
          <%= user.name %>
        </strong>
      </div>
    </div>
    <a href="/logout" class="logout-btn text-white text-decoration-none">
      <i class="bi bi-box-arrow-right"></i>
    </a>
  </header>

  <main>
    <div class="container text-center">
      <div class="row justify-content-center g-3">
        <div class="col-6">
          <a href="/booth/lunch" class="text-decoration-none">
            <div class="booth-card booth-lunch">
              <i class="bi bi-egg-fried"></i>
              Lunch Box
            </div>
          </a>
        </div>
        <div class="col-6">
          <a href="/booth/souvenir" class="text-decoration-none">
            <div class="booth-card booth-souvenir">
              <i class="bi bi-gift"></i>
              Souvenir
            </div>
          </a>
        </div>
        <div class="col-6">
          <a href="/booth/photobooth" class="text-decoration-none">
            <div class="booth-card booth-photo">
              <i class="bi bi-camera"></i>
              Photobooth
            </div>
          </a>
        </div>
        <div class="col-6">
          <a href="/booth/games" class="text-decoration-none">
            <div class="booth-card booth-games">
              <i class="bi bi-controller"></i>
              Games
            </div>
          </a>
        </div>
        <div class="col-12">
          <a href="/booth" class="text-decoration-none">
            <div class="booth-card booth-main w-100">
              <i class="bi bi-shop"></i>
              Booth
            </div>
          </a>
        </div>
      </div>
    </div>
  </main>

  <!-- SCAN BUTTON -->
  <div class="scan-area">
    <a href="/scan" class="scan-btn">
      <i class="bi bi-qr-code-scan"></i>
    </a>
    <div class="scan-label">SCAN QR</div>
  </div>

  <%- include("./layouts/footer") %>