<%- include("../layouts/header", { title: "Booth" }) %>

    <style>
        /* BOOTH PAGE FIX */

        body {
            overflow-y: auto !important;
            /* body bisa scroll */
        }

        main {
            display: block !important;
            /* non-flex supaya konten turun normal */
            padding-top: 7rem !important;
            padding-bottom: 7rem !important;
            overflow-y: auto !important;
            /* allow scroll */
        }

        .container {
            max-height: calc(100vh - 150px);
            /* menghindari overflow ke bawah */
            overflow-y: auto;
        }

        .col-12 {
            margin-bottom: 15px;
        }
    </style>

    <header class="d-flex justify-content-between align-items-center">
        <div>
            <small>Welcome</small><br>
            <strong>
                <%= user.name %>
            </strong>
        </div>
        <a href="/logout" class="logout-btn text-white text-decoration-none">
            <i class="bi bi-box-arrow-right"></i>
        </a>
    </header>

    <main class="text-center">
        <div class="container">
            <div class="row justify-content-center g-3">

                <% const visitedSafe=(typeof visited !=="undefined" && visited) ? visited : {}; %>

                    <% Object.entries(booths).forEach(([key, booth])=> { %>

                        <% let isVisited=visitedSafe[key]===true; %>

                            <div class="col-12">
                                <a href="/booth/<%= key %>" class="text-decoration-none">
                                    <div class="booth-card booth-main <%= isVisited ? 'visited' : 'not-visited' %>">
                                        <i class="bi bi-shop"></i>
                                        <%= booth.name %>
                                    </div>
                                </a>
                            </div>


                            <% }) %>

            </div>
        </div>
    </main>

    <%- include("../layouts/footer") %>