<!doctype html>
<html lang="id">

<head>
    <meta charset="utf-8" />
    <title>Scan QR Lunch Box</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background: url("/assets/img/bg-dashboard.png") no-repeat center top/cover;
            color: white;
            font-family: Poppins, sans-serif;
            height: 100vh;
        }

        .scan-container {
            background: rgba(7, 20, 43, 0.9);
            border-radius: 24px;
            padding: 2rem 1rem;
            width: 85%;
            max-width: 350px;
            text-align: center;
            margin: 120px auto 0;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.4);
        }

        .qr-box {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 18px;
            padding: 12px;
        }
    </style>
</head>

<body>

    <header class="d-flex justify-content-between align-items-center p-3">
        <div>
            <small>Welcome</small><br>
            <strong>
                <%= user.name %>
            </strong>
        </div>
        <a href="/dashboard" class="btn btn-light btn-sm">Back</a>
    </header>

    <div class="scan-container">
        <h3>Scan QR Lunch Box</h3>
        <div class="qr-box">
            <div id="qr-reader" style="width:100%"></div>
        </div>

        <p class="text-white-50 small mt-2">Arahkan kamera ke QR Lunch Box</p>
    </div>

    <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        const scanner = new Html5Qrcode("qr-reader");

        function startScan() {
            scanner.start(
                { facingMode: "environment" },
                { fps: 10, qrbox: { width: 250, height: 250 } },
                async (decoded) => {
                    await scanner.stop();

                    const res = await fetch("/scan-lunch/result", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ code: decoded })
                    });

                    if (res.redirected) return window.location.href = res.url;

                    const msg = await res.text();
                    Swal.fire("Error", msg, "error");
                    startScan();
                }
            );
        }

        startScan();
    </script>

</body>

</html>